@model List<Host>;
@{
    ViewData["Title"] = "Home Page";
}

<main class="content">

    <header class="content_top">
        <h1>my trips</h1>


    </header>

    <section class="content_center">
        <div class="information ">
            <div id="detalhes" class="details">
                <p id="cityid"></p>
                <p id="date"></p>
                <p id="guest"></p>
                <p id="class"></p>
                <p id="price"></p>
            </div>
            <h3>Choose a trip</h3>
        </div>

        @{

            foreach (var hotel in Model)
            {
        <a asp-action="">
            <div class="information" onclick="mostrar('detalhes') ">
                <img src="@hotel.thumb">
                <p>@hotel.stars</p>
                <h3>@hotel.hotelName</h3>
                <p>@hotel.price</p>
            </div>
        </a>
            }
        }


    </section>
</main>